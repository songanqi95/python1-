# card_main 
_____________________________________________
import cards_tools
# 执行无限循环
while True:
    cards_tools.show_menu()
    action_str = input(f'请选择操作功能：')
    print(f'您选择的操作为【{action_str}】')
    if action_str == "1":
        cards_tools.new_card()

    elif action_str == "2":
        cards_tools.show_all()
    elif action_str == "3":
        cards_tools.search_card()
    elif action_str == "0":
        print("感谢使用【名片管理系统】")
        break
    else:
        print("输入错误，请重新输入")
